{
  "name": "tsz-conformance",
  "version": "1.0.0",
  "type": "module",
  "description": "Differential testing harness for TypeScript vs Rust/WASM compiler",
  "main": "dist/runner.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "cd .. && ./conformance/run-conformance.sh",
    "test:native": "cd .. && ./conformance/run-conformance.sh --max=100",
    "test:native:500": "cd .. && ./conformance/run-conformance.sh --max=500",
    "test:native:all": "cd .. && ./conformance/run-conformance.sh --all",
    "test:wasm": "cd .. && ./conformance/run-conformance.sh --wasm --max=100",
    "test:wasm:500": "cd .. && ./conformance/run-conformance.sh --wasm --max=500",
    "test:wasm:all": "cd .. && ./conformance/run-conformance.sh --wasm --all"
  },
  "dependencies": {
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  }
}
