{
  "name": "tsz-conformance",
  "version": "1.0.0",
  "type": "module",
  "description": "Differential testing harness for TypeScript vs Rust/WASM compiler",
  "main": "dist/runner.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "npm run build && node dist/runner.js",
    "test:100": "npm run build && node dist/runner.js --max=100",
    "test:500": "npm run build && node dist/runner.js --max=500",
    "test:verbose": "npm run build && node dist/runner.js --max=100 --verbose"
  },
  "dependencies": {
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  }
}
