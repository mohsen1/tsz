{
  "name": "tsz-conformance",
  "version": "1.0.0",
  "type": "module",
  "description": "Differential testing harness for TypeScript vs Rust/WASM compiler",
  "main": "dist/runner.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "echo '⚠️  Use ./run-conformance.sh instead (runs in Docker for safety)' && exit 1",
    "test:docker": "cd .. && ./conformance/run-conformance.sh --max=100",
    "test:docker:500": "cd .. && ./conformance/run-conformance.sh --max=500",
    "test:docker:all": "cd .. && ./conformance/run-conformance.sh --all"
  },
  "dependencies": {
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  }
}
