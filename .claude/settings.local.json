{
  "permissions": {
    "allow": [
      "Bash(cargo build:*)",
      "Bash(wasm-pack build:*)",
      "Bash(npm run conformance:*)",
      "Bash(node:*)",
      "Bash(./conformance/run-conformance.sh:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/stop-hook.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/stop-hook.sh"
          }
        ]
      }
    ]
  }
}
